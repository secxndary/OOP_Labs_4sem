<UserControl x:Class="OOP_Lab6_7.ControlledInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_Lab6_7"
             mc:Ignorable="d" 
             d:DesignHeight="66" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.4*"/>
        </Grid.RowDefinitions>


        
        <Label Grid.Row="0" Name="textBlockUC"
               Content="{Binding Title}"
               Style="{DynamicResource colorDC}">
        </Label>

        
        <TextBox Grid.Row="1" Margin="5 0 0 10" 
                 Height="20"
                 Name="textBoxUC" 
                 MaxLength="{Binding Number}" >
        </TextBox>
        
    </Grid>
</UserControl>
